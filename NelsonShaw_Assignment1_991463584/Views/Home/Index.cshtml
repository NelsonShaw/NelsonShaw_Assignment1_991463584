@model NelsonShaw_Assignment1_991463584.Models.RestaurantResponse
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <title>Home</title>
    <style>
        .btn a {
            color: white;
            text-decoration: none
        }

        body {
            background-color: lightgreen;
        }

        h1, h3 {
            color: green;
        }
    </style>
</head>
<body>
    <div class="container text-center">
        <h1>Restaurant Party Reservations</h1>
        <h3>Your invited! Come and bring some friends!</h3>
    </div>
        <div class="container">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>Restaurant:</label>
                    @Html.DropDownListFor(x => x.RestaurantName, new[] {
                                            new SelectListItem() {Text = "Harveys",
                                                Value = "Harveys"},
                                            new SelectListItem() {Text = "Montanas",
                                                Value = "Montanas"},
                                            new SelectListItem() {Text = "The Keg",
                                                Value = "The Keg"},
                                            new SelectListItem() {Text = "East Side Marios",
                                                Value = "East Side Marios"},
                                            new SelectListItem() {Text = "Swiss Chalet",
                                                Value = "Swiss Chalet"}
                                        }, "Choose a restaurant", new { @class = "form-control" })
                </div>
                <div class="text-center">
                    <input class="btn btn-success" type="submit" value="Go" />
                </div>
            }
        </div>
</body>
</html>
